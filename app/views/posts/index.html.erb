<div class="apple_pagination">
  <%= will_paginate @posts %>
</div>

<div class='reverse_links'>
  <% @posts.reverse.each do |post| %>
      <h2 class='h2_blog'><%= (post.created_at - 8.hours).strftime('%A, %B %e, %Y') %></h2><br>
      <h1 class='h1_blog'><%= post.title %></h1>
      <%= post.content.html_safe %>

    <% if session[:user_id] == 1 %>
      <p><%= link_to "Edit", edit_post_path(post) %> ~ <%= link_to 'Delete', delete_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  <% end %>
</div>