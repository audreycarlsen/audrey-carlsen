<p><%= flash[:notice] %></p>

<h1 class="h1_blog">Speak, friend, and enter.</h1>
<%= form_tag sessions_path do %>
    <p><%= label_tag(:username) %><br>
    <%= text_field_tag :username %></p>
    <p><%= label_tag(:password) %><br>
    <%= password_field_tag :password %></p>
    <p><%= submit_tag "Onward, to glory!" %></p>
<% end %>